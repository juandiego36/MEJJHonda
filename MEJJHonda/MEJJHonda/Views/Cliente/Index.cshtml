@model IEnumerable<MejjHonda.Models.MEJJ_Cliente>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Clientes</h2>
<div class="col-md-12" style="padding:0px">
    <div class="col-md-5 input-group fa-pull-left">
        @using (Html.BeginForm())
        {
            <input type="text"
                   name="busqueda"
                   placeholder="Search for..."
                   class="navbar-search bg-light border-0"
                   style="color:#858796;border-width:thin" />
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-search fa-sm"></i>
            </button>
        }
    </div>
    <div class="fa-pull-right col-md-2 form-group">
        @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiasCredito)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiasCredito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.IdCliente }, new { @class = "btn btn-info fas fa-edit", title = "Ver", @style = "width:30%" })
                @Html.ActionLink(" ", "Details", new { id = item.IdCliente }, new { @class = "btn btn-info fas fa-fw fa-eye", title = "Ver", @style = "width:30%" })
                @Html.ActionLink(" ", "Delete", new { id = item.IdCliente }, new { @class = "btn btn-info fas fa-trash-alt", title = "Ver", @style = "width:30%" })
            </td>
        </tr>
    }

</table>
<span class="d-none" id="message">@TempData["message"]</span>
<span class="d-none" id="type">@TempData["type"]</span>
@section Scripts{
    <script>
        $(document).ready(function () {
            var message = $('#message').text()
            var type = $('#type').text()
            if (message) {
                switch (type) {
                    case 'error':
                        toastr.error(message);
                        break;
                    case 'success':
                        toastr.success(message);
                        break;
                }
            }
        })
    </script>
}

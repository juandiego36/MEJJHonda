@model IEnumerable<MejjHonda.Models.MEJJ_Articulo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Productos</h2>
<div class="row">
    <div class="col-sm-2 offset-10 form-group">
        @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary", title = "Nueva factura" })
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tamanio)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tamanio)
            </td>
            <td>
                @Html.ActionLink(" ", "Edit", new { id = item.IdArticulo }, new { @class = "btn btn-info fas fa-edit", title = "Ver", @style = "width:20%" }) |
                @Html.ActionLink(" ", "Details", new { id = item.IdArticulo }, new { @class = "btn btn-info fas fa-fw fa-eye", title = "Ver", @style = "width:20%" }) |
                @Html.ActionLink(" ", "Delete", new { id = item.IdArticulo }, new { @class = "btn btn-info fas fa-trash-alt", title = "Ver", @style = "width:20%" })
            </td>
        </tr>
    }
</table>
<span class="d-none" id="message">@TempData["message"]</span>
<span class="d-none" id="type">@TempData["type"]</span>
@section Scripts{
    <script>
        $(document).ready(function () {
            var message = $('#message').text()
            var type = $('#type').text()
            if (message) {
                switch (type) {
                    case 'error':
                        toastr.error(message);
                        break;
                    case 'success':
                        toastr.success(message);
                        break;
                }
            }
        })
    </script>
}

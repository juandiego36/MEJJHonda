@model IEnumerable<MejjHonda.Models.MEJJ_FacturaEnca>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ventas Generadas</h2>

<div class="col-md-12" style="padding:0px">
    @using (Html.BeginForm())
    {
        <div class="col-md-5 input-group fa-pull-left">
            <input type="text"
                   name="busqueda"
                   placeholder="Buscar por..."
                   class="form-control navbar-search bg-light border-0"
                   style="color:#858796;border-width:thin" />
            <button class="btn btn-primary" type="submit" title="Buscar">
                <i class="fas fa-search fa-sm"></i>
            </button>
        </div>
    }
        <div class="fa-pull-right col-md-2 form-group">
            @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary", title = "Nueva factura" })
        </div>
</div>
<br />
<table class="table">
    <tr>
        <th style="width: 10%">
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th style="width:35%">
            @Html.DisplayNameFor(model => model.Observacion)
        </th>
        <th style="width:30%">
            @Html.DisplayNameFor(model => model.MEJJ_Cliente.Nombre)
        </th>
        <th style="width:40%">
            Opciones
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Convert.ToDateTime(item.Fecha).ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Observacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MEJJ_Cliente.Nombre)
        </td>

        <td>
            @Html.ActionLink(" ", "Details", new { id = item.IdFacturaE }, new { @class = "btn btn-info fas fa-fw fa-eye", title = "Ver", @style = "width:20%" })

        </td>
    </tr>
}

</table>

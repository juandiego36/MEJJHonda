@model MejjHonda.Models.MEJJ_Empleado
@{
    Layout = null;
        if (Session["IdEmpleado"] != null)
        {
            Response.Redirect("~/Home/Index");
        }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ForgotPassword</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Custom fonts for this template-->
    <link href="~/Scripts/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/Styles/Login.css" rel="stylesheet">
</head>
<body class="bg-gradient-primary">

    <div class="container">
        @using (Html.BeginForm())
        {
            <div class="row justify-content-center">

                <div class="col-xl-10 col-lg-12 col-md-9">

                    <div class="card o-hidden border-0 shadow-lg my-5">
                        <div class="card-body p-0">
                            <!-- Nested Row within Card Body -->
                            <div class="row">
                                <img class="col-lg-6 d-none d-lg-block" src="~/Content/Img/HondaIcon.jpg" />
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-2">¿Olvidaste tu contraseña?</h1>
                                            <p class="mb-4">Simplemente ingrese su dirección de correo electrónico a continuación y le enviaremos un enlace para restablecer su contraseña!</p>
                                        </div>
                                        <div class="text-success">@ViewBag.Message</div>
                                        <form class="user">
                                            <div class="form-group">
                                                @Html.TextBox("email", "", new { @class = "form-control form-control-user" })
                                            </div>
                                            <input type="submit" value="Restablecer la contraseña" class="btn btn-primary btn-user btn-block" />
                                        </form>
                                        <hr>
                                        <div class="text-center">
                                            <a href=" @Url.Action("Index", "Login")">Volver al Login</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>

            </div>
        }


    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Scripts/jquery-easing/jquery.easing.min.js"></script>



</body>
</html>
